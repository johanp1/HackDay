<pyvcp> 
   <labelframe text="MPG">
      <font>("Helvetica",16)</font> 
         <vbox> 
            <relief>RIDGE</relief> 
            <bd>6</bd> 
            <hbox> 
               <jogwheel> 
                  <halpin>"jog-counts"<event>jog</event><type>s32</type></halpin>
                  <cpr>45</cpr> 
                  <size>250</size> 
               </jogwheel>
               <radiobutton>
                  <choices>["X","Y","Z"]</choices>
                  <halpin>"selector"<event>sel</event><type>u32</type></halpin>
                  <initval>0</initval>
               </radiobutton>   
            </hbox>           
            <hbox> 
               <relief>RIDGE</relief>
               <bd>2</bd> 
               <label>
                  <text>"jog count:"</text>
               </label> 
               <number> 
                  <halpin>"number-jog-count"</halpin>
                  <font>("Helvetica",24)</font>
                  <format>"+4.4f"</format> 
               </number>
            </hbox>
            <hbox> 
               <relief>RIDGE</relief>
               <bd>2</bd> 
               <label>
                  <text>"jog scale:"</text>
               </label> 
               <scale> 
                  <font>("Helvetica",14)</font>
                  <halpin>"jog-scale"</halpin> 
                  <resolution>1</resolution>
                  <orient>HORIZONTAL</orient>
                  <min_>1</min_>
                  <max_>80</max_>
               </scale>
            </hbox>
            <hbox> 
               <relief>RIDGE</relief>
               <bd>2</bd> 
               <checkbutton>
                  <halpin>"jog-vel-mode"</halpin> 
                  <text>"velocity mode"</text>
                  <initval>0</initval>
               </checkbutton>
            </hbox>
            <hbox> 
               <relief>RIDGE</relief>
               <bd>2</bd> 
               <label> 
                  <text>"jog-x"</text> 
                  <font>("Helvetica",14)</font> 
               </label> 
               <led> 
                  <halpin>"jog-x-active"</halpin>
                  <size>25</size> 
                  <on_color>"green"</on_color> 
                  <off_color>"red"</off_color> 
               </led> 
               <label> 
                  <text>"jog-y"</text> 
                  <font>("Helvetica",14)</font> 
               </label> 
               <led> 
                  <halpin>"jog-y-active"</halpin>
                  <size>25</size> 
                  <on_color>"green"</on_color> 
                  <off_color>"red"</off_color> 
               </led> 
               <label> 
                  <text>"jog-z"</text> 
                  <font>("Helvetica",14)</font> 
               </label> 
               <led> 
                  <halpin>"jog-z-active"</halpin>
                  <size>25</size> 
                  <on_color>"green"</on_color> 
                  <off_color>"red"</off_color> 
               </led> 
            </hbox>
            <hbox> 
               <relief>RIDGE</relief>
               <bd>2</bd> 
               <button> 
                  <halpin>"rth-btn"<event>rth</event><type>u32</type></halpin>
                  <text>"Rapid to Home"</text> 
               </button>
               <button> 
                  <halpin>"prog-run-btn"<event>run</event><type>u32</type></halpin>
                  <text>"Run"</text> 
               </button>
               <button> 
                  <halpin>"estop-btn"<event>est</event><type>u32</type></halpin>
                  <text>"E-Stop"</text> 
               </button>
            </hbox>
         </vbox>
   </labelframe>
</pyvcp>